generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/app.db"
}

model CaddyConfiguration {
  id        Int      @id @default(autoincrement())
  config    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Domains {
  id                 Int      @id @default(autoincrement())
  incomingAddress    String   @unique
  destinationAddress String
  createdAt DateTime @default(now())
}
